<UserControl x:Class="EasyFileTransferApp.View.UserControls.SideBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EasyFileTransferApp.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <UserControl.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="24"/>
        </Style>
    </UserControl.Resources>
    <StackPanel Background="#151515">
        <TextBlock Text="NetShare" FontSize="36" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,20" Foreground="White"/>
        <Button x:Name="HomeButton"  Content="Home" Click="HomeButton_Click"/>
        <Button Content="Share" Click="ShareButton_Click"/>
        <Button Content="Settings" Click="SettingsButton_Click"/>
    </StackPanel>
</UserControl>
