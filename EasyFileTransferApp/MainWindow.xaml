<Window x:Class="EasyFileTransferApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyFileTransferApp"
        mc:Ignorable="d"
        Title="EZ File Transfer" Height="450" Width="800">
    <Grid Background="#282828">
        <Grid.ColumnDefinitions>
            <!-- Sidebar width -->
            <ColumnDefinition Width="200"/>

            <!-- Main content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#151515">
            <TextBlock Text="EZ Transfer" FontSize="36" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,20" Foreground="White"/>
            <Button Content="Home" FontSize="24" Background="#151515" Foreground="White" BorderThickness="0"/>
            <Button Content="Discovery" FontSize="24" Background="#151515" Foreground="White" BorderThickness="0"/>
            <Button Content="Settings" FontSize="24" Background="#151515" Foreground="White" BorderThickness="0"/>
        </StackPanel>
    </Grid>

</Window>
