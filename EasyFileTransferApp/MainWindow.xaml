<Window x:Class="EasyFileTransferApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyFileTransferApp"
        xmlns:userControls="clr-namespace:EasyFileTransferApp.View.UserControls"
        mc:Ignorable="d"
        Title="EZ File Transfer" Height="600" Width="960" MinWidth="700" MinHeight="400">
    <Grid Background="#282828">
        <Grid.ColumnDefinitions>
            <!-- Sidebar width -->
            <ColumnDefinition Width="200"/>

            <!-- Main content -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <userControls:SideBar Grid.Column="0"/>

        <ContentControl x:Name="MainContent" Grid.Column="1"/>

    </Grid>

</Window>
